{
    "version": "1.14.47",
    "name": "goodt-wcore",
    "main": "src/index.js",
    "types": "src/core/index.d.ts",
    "publishConfig": {
        "registry": "https://art.goodt.me/repository/npm/"
    },
    "files": [
        "src/**/*",
        "package.aliases.js",
        "package.shared.js",
        "boot.wmf.js",
        ".config/**/*"
    ],
    "scripts": {
        "start": "vite --force",
        "dev": "vite --force",
        "serve": "vue-cli-service serve",
        "lint": "eslint src/",
        "lint:sandbox": "eslint sandbox/widgets --config .eslintrc.js",
        "lint:fix:essential": "putout src/ --fix",
        "lint:style": "stylelint 'src/**/*.{css,scss,less,pcss,vue}'",
        "lint:all:fix": "npm run lint -- --fix",
        "format": "prettier --write ./src/**/*",
        "test:unit": "VUE_CLI_CONTEXT=./tests vue-cli-service test:unit",
        "panel-ui:serve": "npx vue-styleguidist server --config ./styleguide.config.js",
        "build": "vue-cli-service build",
        "test:build": "vue-cli-service build --modern --target lib --skip-plugins eslint",
        "panel-ui:build": "npx vue-styleguidist build --config ./styleguide.config.js",
        "widget:create": "npx goodt-scaffold",
        "widget:panel": "npx goodt-scaffold-panel",
        "release:base": "npm_config_registry=https://registry.npmjs.org npx standard-version --skip.changelog --tag-prefix=\"\"",
        "release": "npm run release:base -- --release-as minor --releaseCommitMessageFormat=\"chore(release): {{currentTag}}\"",
        "release:patch": "npm run release:base -- --release-as patch --releaseCommitMessageFormat=\"chore(release): {{currentTag}}\"",
        "release:prerelease": "npm run release -- --prerelease --releaseCommitMessageFormat=\"chore(prerelease): {{currentTag}}\""
    },
    "dependencies": {
        "@apollo/client": "^3.3.21",
        "@apollo/link-context": "^2.0.0-beta.3",
        "@goodt-common/api": "file:src/common/services/api",
        "@goodt-common/application": "file:src/common/layers/application",
        "@goodt-common/auth": "file:src/common/auth",
        "@goodt-common/cache": "file:src/common/services/cache",
        "@goodt-common/data": "file:src/common/services/data",
        "@goodt-common/devtools": "file:src/common/devtools",
        "@goodt-common/domain": "file:src/common/layers/domain",
        "@goodt-common/dremio": "file:src/common/services/dremio",
        "@goodt-common/dremio-panels": "file:src/common/services/dremio/panels",
        "@goodt-common/error-service": "file:src/common/services/error",
        "@goodt-common/errors": "file:src/common/errors",
        "@goodt-common/form": "file:src/common/form",
        "@goodt-common/graphql": "file:src/common/graphql",
        "@goodt-common/infra": "file:src/common/layers/infra",
        "@goodt-common/layers": "file:src/common/layers",
        "@goodt-common/mixins": "file:src/common/mixins",
        "@goodt-common/net": "file:src/common/net",
        "@goodt-common/plugins": "file:src/common/plugins",
        "@goodt-common/service-container": "file:src/common/services/ServiceContainer",
        "@goodt-common/service-provider": "file:src/common/services/ServiceProvider",
        "@goodt-common/services": "file:src/common/services",
        "@goodt-common/shared": "file:src/common/shared",
        "@goodt-common/utils": "file:src/common/utils",
        "@goodt-common/utils-number": "file:src/common/utils/number",
        "@goodt-wcore/compat": "file:src/core/compat",
        "@goodt-wcore/components": "file:src/core/components",
        "@goodt-wcore/core": "file:src/core",
        "@goodt-wcore/elem": "file:src/core/Elem",
        "@goodt-wcore/errors": "file:src/core/errors",
        "@goodt-wcore/managers": "file:src/core/managers",
        "@goodt-wcore/panel": "file:src/core/Panel",
        "@goodt-wcore/panel-ui": "file:src/core/components/panel-ui",
        "@goodt-wcore/panels": "file:src/core/panels",
        "@goodt-wcore/render": "file:src/core/render",
        "@goodt-wcore/root": "file:./",
        "@goodt-wcore/utils": "file:src/core/utils",
        "@typescript-eslint/eslint-plugin": "^6.19.1",
        "@typescript-eslint/parser": "^6.19.1",
        "@vue/devtools-api": "^6.1.4",
        "apollo-invalidation-policies": "^1.0.0-beta16",
        "axios": "^1.3.4",
        "error-stack-filter": "^0.1.1",
        "graphql": "15.0.0",
        "inflection": "^1.13.1",
        "keycloak-js": "^10.0.0",
        "ramda": "^0.27.1",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@goodt-widgets-rostalent/api": "*",
        "@goodt/build-deps": "^2.0.0",
        "@goodt/common-deps": "^2.0.0",
        "@goodt/dev-deps": "^2.0.0",
        "@goodt/tests": "^1.0.0",
        "vue-styleguidist": "4.35.0",
        "vue-template-compiler": "^2.6.0"
    },
    "peerDependencies": {
        "@goodt/common-deps": "*",
        "@goodt/sandbox": "1.14.x",
        "vue": "^2.6.0",
        "vue-i18n": "^8.27.1",
        "vuedraggable": "^2.24.3"
    },
    "workspaces": [
        "packages/*"
    ],
    "vendorOptions": {
        "widgetsDir": "./sandbox/widgets"
    },
    "engines": {
        "node": ">=18",
        "npm": ">=9"
    }
}
