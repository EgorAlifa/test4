.tooltip {
  padding: var(--w-tooltip_v-padding) var(--w-tooltip_h-padding);
  color: var(--w-tooltip_color);
  background-color: var(--w-tooltip_bg-color);
  border-width: var(--w-tooltip_border-width);
  border-color: var(--w-tooltip_border-color);
  border-style: var(--w-tooltip_border-style);
  border-radius: var(--w-tooltip_border-radius);
  box-shadow: var(--w-tooltip_box-shadow);

  &__title {
    text-align: var(--w-tooltip-title_text-align);
    color: var(--w-tooltip-title_color);
    font-size: var(--w-tooltip-title_font-size);
    font-family: var(--w-tooltip-title_font-family);
    font-weight: var(--w-tooltip-title_font-weight);
  }

  &__title + &__data-items {
    margin-top: 0.5rem;
  }

  &__data-item {
    & + & {
      margin-top: 0.25rem
    }
  }
}
