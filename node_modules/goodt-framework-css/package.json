{
    "name": "goodt-framework-css",
    "version": "2.0.16",
    "homepage": "https://goodt-css.netlify.app/",
    "main": "src/_all.less",
    "files": [
        "dist/",
        "scripts/",
        "src/"
    ],
    "scripts": {
        "serve": "docsify serve ./docs",
        "watch": "watch \"npm run build:less-docs\" ./src",
        "build:theme": "node scripts/theme-build.js ./src/_params.less",
        "build:less": "lessc ./src/_all.less | postcss --use autoprefixer | uglifycss --debug | node ./scripts/banner.js > ./dist/all.css",
        "build:less-theme": "lessc ./src/_theme.less | uglifycss --debug | node ./scripts/banner.js > ./dist/theme.css",
        "build:less-docs": "lessc ./src/_all.less ./docs/css/all.css",
        "build:meta": "node scripts/meta.js",
        "build:docs": "node ./scripts/docs.js",
        "deploy:docs": "npx netlify deploy --dir=docs --prod",
        "prebuild": "npm version patch --no-git-tag-version",
        "build": "npm run build:theme && npm run build:less && npm run build:less-theme && npm run build:meta && npm run build:docs",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "color": "^4.2.3"
    },
    "devDependencies": {
        "autoprefixer": "^10.0.0",
        "browserify": "^17.0.0",
        "docsify": "^4.12.2",
        "less": "^4.0.0",
        "netlify-cli": "^10.0.0",
        "postcss-cli": "^10.0.0",
        "uglifycss": "0.0.29",
        "watch": "^1.0.2"
    },
    "directories": {
        "doc": "docs"
    },
    "description": "",
    "browserslist": [
        "> 1%",
        "last 2 version"
    ]
}
